# Backend Environment Variables
# Copy this file to .env and update with your values

# API Configuration
APP_API_BASE=http://127.0.0.1:8000
APP_API_TITLE=MathAI Backend
APP_API_VERSION=1.0.0

# CORS Configuration (comma-separated list)
APP_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# Security - CHANGE THIS IN PRODUCTION!
APP_SECRET_KEY=your-secret-key-here-change-me-use-openssl-rand-hex-32

# Feature Flags
APP_ENABLE_PROGRESSIVE_HINTS=true
APP_ENABLE_SOLUTION_EXPLAINER=true
APP_ENABLE_METRICS=true
APP_ENABLE_RATE_LIMITING=true

# Rate Limiting
APP_RATE_LIMIT_PER_MINUTE=60
APP_RATE_LIMIT_BURST=10

# Performance
APP_ENABLE_CACHE=true
APP_CACHE_SIZE=1000

# Logging
APP_LOG_LEVEL=INFO
APP_LOG_FORMAT=json
